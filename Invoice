<script>
  function calculateLineTotal(row) {
    let quantity = parseFloat(row.querySelector('input[name="quantity"]').value);
    let unitPrice = parseFloat(row.querySelector('input[name="unitPrice"]').value);
    let total = quantity * unitPrice;
    row.querySelector('.lineTotal').innerText = total.toFixed(2);
    return total;
  }

  function addService() {
    let tableBody = document.getElementById('servicesBody');
    let newRow = document.createElement('tr');
    newRow.innerHTML = '<td><input type="text" name="description" value=""></td>' +
                       '<td><input type="number" name="quantity" value="1" min="1"></td>' +
                       '<td><input type="number" name="unitPrice" value="0" min="0"></td>' +
                       '<td class="lineTotal">0.00</td>';
    tableBody.appendChild(newRow);
  }

  function generateInvoice() {
    // Gather header details
    let invoiceNumber = document.getElementById('invoiceNumber').value;
    let invoiceDate = document.getElementById('invoiceDate').value;
    let clientName = document.getElementById('clientName').value;
    let clientAddress = document.getElementById('clientAddress').value;
    
    let detailsHTML = `<p><strong>Invoice Number:</strong> ${invoiceNumber}</p>
                       <p><strong>Date:</strong> ${invoiceDate}</p>
                       <p><strong>Client Name:</strong> ${clientName}</p>
                       <p><strong>Client Address:</strong> ${clientAddress}</p>`;
    document.getElementById('invoiceDetails').innerHTML = detailsHTML;
    
    // Process service rows
    let serviceRows = document.querySelectorAll('#servicesBody tr');
    let servicesHTML = '<table><thead><tr><th>Description</th><th>Quantity</th><th>Unit Price ($)</th><th>Total ($)</th></tr></thead><tbody>';
    let grandTotal = 0;
    serviceRows.forEach(row => {
      let description = row.querySelector('input[name="description"]').value;
      let quantity = parseFloat(row.querySelector('input[name="quantity"]').value);
      let unitPrice = parseFloat(row.querySelector('input[name="unitPrice"]').value);
      let lineTotal = calculateLineTotal(row);
      grandTotal += lineTotal;
      servicesHTML += `<tr>
          <td>${description}</td>
          <td>${quantity}</td>
          <td>${unitPrice.toFixed(2)}</td>
          <td>${lineTotal.toFixed(2)}</td>
      </tr>`;
    });
    servicesHTML += '</tbody></table>';
    document.getElementById('invoiceServices').innerHTML = servicesHTML;
    
    let totalHTML = `<p class="total">Grand Total: $${grandTotal.toFixed(2)}</p>`;
    document.getElementById('invoiceTotal').innerHTML = totalHTML;
    
    document.getElementById('invoiceOutput').style.display = 'block';
  }
</script>

